    .my-3.my-md-5
      .container
        if election_created
                .alert.alert-success
                  button.close(type='button', data-dismiss='alert')
                  strong Election Created!
        .row
          .col.align-center
            form.card(action='add_new_election', method='post')
              .card-header
                .row(style='width:100%;')
                  .col-12(style='margin-top:10px;')
                    h3.card-title
                      center New Election
              .card-body
                .row
                  .col-md-12(<form='')
                    .form-group.row
                      label.col-sm-2.col-form-label Name
                      .col-sm-10
                        input.form-control(type='text', name='name', placeholder='Name')
                    .form-group.row
                      label.col-sm-2.col-form-label TOPIC
                      .col-sm-10
                        textarea.form-control(name='topic', placeholder='Election Topic')
                    .form-group.row
                      label.col-sm-2.col-form-label Select Candidates
                      .dropdown.col-sm-10
                        .form-group
                          select#sel1.form-control(multiple='', size='4',name='candidate')
                            each item in voter_details
                                option(value='#{item.user_id}') #{item.name}
                    .text-center
                      button.btn.btn-light.btn-lg(type='submit') Create
            a.back-to-top(href='#')
              i.fa.fa-chevron-up
            #preloader
